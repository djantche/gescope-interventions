{% extends 'base.html.twig' %}
{% block title %}Nouvelle intervention{% endblock %}
{% block body %}
<div class="container">
  <div class="card">
    <h2>Créer une nouvelle intervention</h2>

    <form id="interventionForm" method="post" novalidate>
      <div class="form-grid">
        <div class="form-group">
          <label for="firstName">Prénom</label>
          <input id="firstName" name="firstName" required>
        </div>

        <div class="form-group">
          <label for="lastName">Nom</label>
          <input id="lastName" name="lastName" required>
        </div>

        <div class="form-group">
          <label for="address">Adresse</label>
          <input id="address" name="address" required>
        </div>

        <div class="form-group">
          <label for="phone">Téléphone</label>
          <input id="phone" name="phone" required pattern="^[0-9+\s-]+$">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required>
        </div>

        <div class="form-group">
          <label for="technician">Technicien</label>
          <input id="technician" list="techs" name="technician" required>
          <datalist id="techs">
            {% for t in techs %}<option value="{{ t }}">{% endfor %}
          </datalist>
        </div>

        <div class="form-group">
          <label for="scheduledAt">Date et heure</label>
          <input id="scheduledAt" name="scheduledAt" type="datetime-local" required>
        </div>

        <div class="form-group full">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="4" required></textarea>
        </div>
      </div>

      <div class="form-actions">
        <button class="btn" type="submit">Enregistrer</button>
        <a class="btn ghost" href="{{ path('intervention_index') }}">Annuler</a>
      </div>
    </form>
  </div>
</div>
{% endblock %}
